{#
    @see https://html.spec.whatwg.org/multipage/parsing.html#attribute-value-double-quoted-state
#}
{% import 'tokenizer/_macros.php.twig' as h -%}

if ($cc === '"') {
    // Switch to the after attribute value (quoted) state.
    {{ h.advance_to('AFTER_ATTRIBUTE_VALUE_QUOTED') }}
} elseif ($cc === '&') {
    // Set the return state to the attribute value (double-quoted) state.
    {{ h.set_return_state(current_state) }}
    // Switch to the character reference state.
    {{ h.advance_to('CHARACTER_REFERENCE') }}
} elseif ($cc === "\0") {
    // TODO: This is an unexpected-null-character parse error.
    // Append a U+FFFD REPLACEMENT CHARACTER character to the current attribute's value.
    {{ h.append_to_attr_value('"\\u{FFFD}"') }}
    {{ h.advance_to(current_state) }}
} elseif ({{ h.is_eof() }}) {
    // TODO: This is an eof-in-tag parse error.
    // Emit an end-of-file token.
    {{ h.emit_eof() }}
} else {
    // Append the current input character to the current attribute's value.
    $chars = $this->charsUntil("\"&\0");
    {{ h.append_to_attr_value('$chars') }}
    {{ h.update_and_reconsume_in(current_state) }}
}
