if ({{ h.is_alpha() }}) {
    // Create a new end tag token, set its tag name to the empty string.
    $this->currentToken = new EndTag();
    // Reconsume in the tag name state.
    {{ h.reconsume_in('TAG_NAME') }}
} elseif ($cc === '>') {
