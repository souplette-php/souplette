{#
    @see https://html.spec.whatwg.org/multipage/parsing.html#attribute-value-single-quoted-state
#}
{% import 'tokenizer/_macros.php.twig' as h -%}

if ($cc === "'") {
    {{ h.advance_to('AFTER_ATTRIBUTE_VALUE_QUOTED') }}
} elseif ($cc === '&') {
    {{ h.advance_to('CHARACTER_REFERENCE_IN_ATTRIBUTE_VALUE') }}
} elseif ($cc === "\0") {
    // This is an unexpected-null-character parse error.
    {{ h.append_to_attr_value('"\\u{FFFD}"') }}
    {{ h.advance_to(current_state) }}
} elseif ({{ h.is_eof() }}) {
    // This is an eof-in-tag parse error.
    {{ h.emit_eof() }}
} else {
    // Append the current input character to the current attribute's value.
    $chars = $this->charsUntil("'&\0");
    {{ h.append_to_attr_value('$chars') }}
    {{ h.update_and_reconsume_in(current_state) }}
}
