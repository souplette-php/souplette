    @see https://html.spec.whatwg.org/multipage/parsing.html#data-state
#}
{% import 'tokenizer/_macros.php.twig' as h -%}

if ($cc === '&') {
    // Set the return state to the data state.
    {{ h.set_return_state(current_state) }}
    // Switch to the character reference state.
{#    {{ h.advance_to('CHARACTER_REFERENCE_IN_DATA') }}#}
    {{ h.advance_to('CHARACTER_REFERENCE') }}
} elseif ($cc === '<') {
    // Switch to the tag open state.
    {{ h.advance_to('TAG_OPEN') }}
} elseif ($cc === "\0") {
    // TODO: This is an unexpected-null-character parse error.
    // Emit the current input character as a character token.
    $this->tokenQueue->enqueue(new Character($cc));
    {{ h.advance_to(current_state) }}
} elseif ({{ h.is_eof() }}) {
    // Emit an end-of-file token.
    {{ h.emit_eof() }}
} else {
    // Emit the current input character as a character token.
    $chars = $this->charsUntil("&<\0");
    $this->tokenQueue->enqueue(new Character($chars));
    {{ h.update_and_reconsume_in(current_state) }}
}
